rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the owner of the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'admin';
    }
    
    // Helper function to check if user is sheriff
    function isSheriff() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'sheriff';
    }
    
    // Helper function to check if user is buyer
    function isBuyer() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'buyer';
    }
    
    // Helper function to get user type
    function getUserType() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType;
    }
    
    // Users collection
    match /users/{userId} {
      // Allow read if user is authenticated and viewing their own data, or if admin
      allow read: if isAuthenticated() && (isOwner(userId) || isAdmin());
      
      // Allow create if user is creating their own profile
      allow create: if isAuthenticated() && isOwner(userId);
      
      // Allow update if user is updating their own profile, or if admin
      allow update: if isAuthenticated() && (
        isOwner(userId) || isAdmin()
      );
      
      // Allow delete only for admin
      allow delete: if isAdmin();
    }
    
    // Assets collection
    match /assets/{assetId} {
      // Anyone authenticated can read assets
      allow read: if isAuthenticated();
      
      // Only sheriffs and admins can create assets (buyers cannot create assets)
      allow create: if isAuthenticated() && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType in ['sheriff', 'admin']
      );
      
      // Only asset owner (sheriff/admin) or admin can update
      allow update: if isAuthenticated() && (
        resource.data.createdBy == request.auth.uid || isAdmin()
      );
      
      // Only admin can delete
      allow delete: if isAdmin();
    }
    
    // Reservations collection
    match /reservations/{reservationId} {
      // Users can read their own reservations, admins can read all
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || isAdmin()
      );
      
      // Authenticated users can create reservations
      allow create: if isAuthenticated() && 
                     request.resource.data.userId == request.auth.uid;
      
      // Users can update their own reservations, admins can update any
      allow update: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || isAdmin()
      );
      
      // Users can delete their own reservations, admins can delete any
      allow delete: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || isAdmin()
      );
    }
    
    // Watchlist collection
    match /watchlist/{watchlistId} {
      // Users can read their own watchlist items
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || isAdmin()
      );
      
      // Users can create their own watchlist items
      allow create: if isAuthenticated() && 
                     request.resource.data.userId == request.auth.uid;
      
      // Users can update their own watchlist items
      allow update: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
      
      // Users can delete their own watchlist items
      allow delete: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

